<!-- Views/Feedback.cshtml -->

@{
    ViewData["Title"] = "Submit a Feeback";
}

<h2>Submit a Feedback</h2>

<form id="feedbackForm">
    <div class="mb-3">
        <label for="userName" class="form-label">Name:</label>
        <input type="text" id="userName" name="userName" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="userFeedback" class="form-label">Feedback:</label>
        <textarea id="userFeedback" name="userFeedback" class="form-control" required></textarea>
    </div>
    <div class="col-auto">
        <button type="button" class="btn btn-primary mb-3" onclick="submitFeedback()">Submit</button>
    </div>
</form>

<script>
    
    function submitFeedback() {
        // Get form data
        var formData = {
            userName: document.getElementById('userName').value.trim(),
            userFeedback: document.getElementById('userFeedback').value.trim()
        };

        // Perform AJAX request
        $.ajax({
            type: 'POST',
            url: '/Feedback/SubmitFeedback',
            data: formData,
            success: function (response) {
                if (response.success) {
                    // Optionally, you can update the UI or perform additional actions here
                    const form = document.getElementById('feedbackForm');
                    form.innerHTML = `
                        <p><strong>Name:</strong> ${formData.userName}</p>
                        <p><strong>Feedback:</strong> ${formData.userFeedback}</p>
                        <div class="mt-3">
                            <button type="button" class="btn btn-success" onclick="goHome()">Back to Home</button>
                        </div>
                    `;
                    alert(response.message);
                } else {
                    alert('Feedback submission failed.');
                }
            },
            error: function () {
                alert('An error occurred while submitting feedback.');
            }
        });
    }

    function goHome() {
        window.location.href = '/'; // Redirect to the homepage
    }
</script>